local lp = game.Players.LocalPlayer
local char = lp.Character or lp.CharacterAdded:Wait()
local hrp = char:WaitForChild("HumanoidRootPart")

local function clickCuff(target)
    for _, part in pairs(target:GetDescendants()) do
        if part:IsA("ClickDetector") then
            fireclickdetector(part)
            return true
        end
    end
    return false
end

local function loopCuffThrow()
    for _, player in pairs(game.Players:GetPlayers()) do
        if player ~= lp and player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
            local targetHRP = player.Character.HumanoidRootPart
            local footPos = targetHRP.Position - Vector3.new(0, 2, 0)

            -- نلصق نفسنا برجله
            hrp.CFrame = CFrame.new(footPos + Vector3.new(0, 0.2, 0))

            wait(0.4)

            -- نضغط على رجله
            clickCuff(player.Character)

            wait(0.4)

            -- نشمره فوگ
            targetHRP.Velocity = Vector3.new(0, 100, 0)

            wait(0.6)
        end
    end
end

-- Loop
while true do
    pcall(loopCuffThrow)
    wait(5)
end
